<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> 
    <body>
        <div class="app" id="app">
            
            <!-- login container -->
            <div class="form-container login-container">
                <form class="form-class" action="/login" METHOD="POST">
                    <h1>Log into Account</h1>
                    <% if (success.length > 0) { %>
                        <span style="color:greenyellow"></span><%= success %></span>
                    <% } %> 
                    <% if (errors.length > 0) { %>
                        <span style="color:red"><%= errors %></span>
                    <% } %> 
                    <input type="email" name="email" placeholder="Email" />
                    <input type="password" name="password" placeholder="Password" />
                    <button>Login</button>
                </form>
            </div>
            
            <!-- register container -->
            <div class="form-container register-container">
                <form class="form-class" action="/register" METHOD="POST">
                    <h1>Register Account</h1>
                    <span>all fields are required</span>
                    <% if (success.length > 0) { %>
                        <span style="color:greenyellow"></span><%= success %></span>
                    <% } %> 
                    <% if (errors.length > 0) { %>
                        <span style="color:red"><%= errors %></span>
                    <% } %> 
                    <input type="name" name="email" placeholder="Name" />
                    <input type="email" placeholder="Email" />
                    <input type="password" name="password" placeholder="Password" />
                    <button>Register</button>
                </form>
            </div>
            
            <!-- overlays to hide either register or login depending on event listeners or emmiters(dom) -->
            <div class="overlays-container">
                <div class="overlays-wrapper">
                    <!-- right overlay for login -->
                    <div class="overlay-panel overlay-right">
                        <h1>Welcome Back</h1>
                        <p>In order to use our website please login</p>
                        <button class="switch" id="register">Register</button>
                    </div>
                    <!-- left overlay for register -->
                    <div class="overlay-panel overlay-left">
                    <h1>Greetings Registrant</h1>
                    <p>please register, all fields are required</p>
                    <button class="switch" id="login">Login</button>
                </div>
            </div>
        </div>
    </div>
    <script src="./js/frontEnd.js"></script>
</body>
</html>